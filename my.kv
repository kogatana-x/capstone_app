<CreateAccountWindow>:
    name: "create"

    namee: namee
    email: email
    password: passw

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Create an Account"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4
                text_size:self.size
                halign:'left'
                valign:'middle'

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0.2, "top":0.8}
                text: "Name: "
                font_size: (root.width**2 + root.height**2) / 14**4
                text_size:self.size
                halign:'left'
                valign:'middle'

            TextInput:
                pos_hint: {"x":0.4, "top":0.8}
                size_hint: 0.5, 0.12
                id: namee
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5, 0.12
                pos_hint: {"x":0.2, "top":0.67}
                text: "Email: "
                font_size: (root.width**2 + root.height**2) / 14**4
                text_size:self.size
                halign:'left'
                valign:'middle'

            TextInput:
                pos_hint: {"x":0.4, "top":0.67}
                size_hint: 0.5, 0.12
                id: email
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0.2, "top":0.54}
                text: "Password: "
                font_size: (root.width**2 + root.height**2) / 14**4
                text_size:self.size
                halign:'left'
                valign:'middle'

            TextInput:
                pos_hint: {"x":0.4, "top":0.54}
                size_hint: 0.4, 0.12
                id: passw
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4

            #Label:
                #size_hint: 0.5,0.12
                #pos_hint: {"x":0.2, "top":0.41}
                #text: "Select...: "
                #font_size: (root.width**2 + root.height**2) / 14**4
                #text_size:self.size
                #halign:'left'
                #valign:'middle'

            #TextInput:
                #pos_hint: {"x":0.4, "top":0.41}
                #size_hint: 0.4, 0.12
                #id: dropdown
                #multiline: False
                #password: False
                #font_size: (root.width**2 + root.height**2) / 14**4

        Button:
            pos_hint:{"x":0.3,"y":0.05}
            size_hint: 0.4, 0.05
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Log In"
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            pos_hint:{"x":0.2,"y":0.12}
            size_hint: 0.6, 0.15
            text: "Submit"
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release:
                root.manager.transition.direction = "left"
                root.submit()

<LoginWindow>:
    name: "login"

    email: email
    password: password

    FloatLayout:

        Label:
            text:"Email: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.35, 0.15
            text_size:self.size
            halign:'left'
            valign:'middle'

        TextInput:
            id: email
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.45 , "top":0.9}
            size_hint: 0.4, 0.15

        Label:
            text:"Password: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.35, 0.15
            text_size:self.size
            halign:'left'
            valign:'middle'

        TextInput:
            id: password
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            password: True
            pos_hint: {"x": 0.45, "top":0.7}
            size_hint: 0.4, 0.15

        Button:
            pos_hint:{"x":0.2,"y":0.3}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Login"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            pos_hint:{"x":0.3,"y":0.21}
            size_hint: 0.4, 0.05
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Create an Account"
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()

<MainWindow>:
    n: n
    email: email
    created:created

    FloatLayout:
        Label:
            pos_hint:{"x": 0.1, "top":1}
            size_hint:0.8, 0.2
            text: "Account Information: "
            text_size:self.size
            font_size: (root.width**2 + root.height**2) / 13**4
            halign:'left'
            valign:'middle'
        Label:
            id: n
            pos_hint:{"x": 0.2, "top":0.9}
            size_hint:0.8, 0.2
            text: "Account Name: "
            text_size:self.size
            font_size: (root.width**2 + root.height**2) / 14**4
            halign:'left'
            valign:'middle'

        Label:
            id: email
            pos_hint:{"x": 0.2, "top":0.8}
            size_hint:0.8, 0.2
            text: "Email: "
            font_size: (root.width**2 + root.height**2) / 14**4
            text_size:self.size
            halign:'left'
            valign:'middle'

        Label:
            id: created
            pos_hint:{"x": 0.2, "top":0.7}
            size_hint:0.8,0.2
            font_size: (root.width**2 + root.height**2) / 14**4
            text: "Created: "
            text_size:self.size
            halign:'left'
            valign:'middle'

            #Label:
                #id: dropdown
                #pos_hint:{"x": 0.2, "top":0.6}
                #size_hint:0.8,0.2
                #font_size: (root.width**2 + root.height**2) / 14**4
                #text: "EXTRA: "
                #text_size:self.size
                #halign:'left'
                #valign:'middle'
        Button:
            pos_hint:{"x":0.2, "y": 0.1}
            size_hint:0.6,0.1
            text: "Log Out"
            font_size: (root.width**2 + root.height**2) / 15**4
            text_size:self.size
            halign:'center'
            valign:'middle'
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"

<HomeScreen>:
    Label:
        size_hint: 0.5,0.12
        pos_hint:{"x":0.25,"y":.5}
        text: "Resume Builder App Version 0"
        font_size: (root.width**2 + root.height**2) / 14**4
        text_size:self.size
        halign:'center'
        valign:'middle'
    Button:
        pos_hint:{"x":0.4,"y":0.3}
        size_hint: 0.2, 0.05
        font_size: (root.width**2 + root.height**2) / 17**4
        text: "Next"
        on_release:
            root.manager.transition.direction = "up"
            root.is_done()

<CustomDropDown>:
    Button:
        text: 'My first Item'
        size_hint_y: None
        height: 44
        on_release: root.select('item1')
    Label:
        text: 'Unselectable item'
        size_hint_y: None
        height: 44
    Button:
        text: 'My second Item'
        size_hint_y: None
        height: 44
        on_release: root.select('item2')
